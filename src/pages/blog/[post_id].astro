---
import Layout from '../../layouts/Layout.astro';
import BlogPostLayout from '../../components/BlogPostLayout/BlogPostLayout';
import { BLOG_POSTS } from '../../data/blogposts';

export function getStaticPaths() {
  const PATHS = BLOG_POSTS.map((post, index) => {
    return { params: { post_id: index } };
  });
  return PATHS;
}
const params = Astro.params;
console.log(Astro);
---

<Layout title={`Post ${params.post_id} Title`}>
  <main>
    <BlogPostLayout postID={parseInt(params.post_id!)} />
  </main>
</Layout>
